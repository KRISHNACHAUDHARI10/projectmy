<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= pagetitle %>
    </title>

    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 min-h-screen flex flex-col">
    <%- include('../partils/nav') %>

        <div class="flex-grow flex items-center justify-center">
            <div class="bg-white shadow-lg rounded-lg w-full max-w-md p-8">
                <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">
                    Signup
                </h2>

                <form action="/signup" method="post" class="space-y-4">
                    <% if(errorMessage && errorMessage.length> 0) { %>
                        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
                            <strong class="font-bold">Error:</strong>
                            <span class="block sm:inline">
                                <%= errorMessage[0] %>
                            </span>
                        </div>
                        <% } %>

                            <!-- First Name -->
                            <div>
                                <label class="block text-gray-700 font-medium mb-1">First Name</label>
                                <input type="text"
                                    value="<%=  typeof  oldInput !== 'undefined' ? oldInput.firstName : '' %>"
                                    name="firstName" placeholder="First Name" required
                                    class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-500">
                            </div>

                            <!-- Last Name -->
                            <div>
                                <label class="block text-gray-700 font-medium mb-1">Last Name</label>
                                <input type="text"
                                    value="<%=  typeof  oldInput !== 'undefined' ? oldInput.lastName : '' %>"
                                    name="lastName" placeholder="Last Name" required
                                    class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-500">
                            </div>

                            <!-- Email -->
                            <div>
                                <label class="block text-gray-700 font-medium mb-1">Email</label>
                                <input type="email" name="email" placeholder="Enter email"
                                    value="<%=  typeof  oldInput !== 'undefined' ? oldInput.email : '' %>" required
                                    class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-500">
                            </div>

                            <!-- Password -->
                            <div>
                                <label class="block text-gray-700 font-medium mb-1">Password</label>
                                <input type="password" name="password" placeholder="Enter password" required
                                    value="<%=  typeof  oldInput !== 'undefined' ? oldInput.password : '' %>"
                                    class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-500">
                            </div>

                            <!-- Confirm Password -->
                            <div>
                                <label class="block text-gray-700 font-medium mb-1">Confirm Password</label>
                                <input type="password" name="confirmPassword" placeholder="Confirm password" required
                                    value="<%=  typeof  oldInput !== 'undefined' ? oldInput.confirmPassword : '' %>"
                                    class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-500">
                            </div>

                            <!-- User Type (Radio Buttons) -->
                            <div>
                                <label class="block text-gray-700 font-medium mb-2">User Type</label>
                                <div class="flex items-center gap-6">
                                    <label class="flex items-center gap-2">
                                        <input type="radio" name="userType" value="Guest" required <%=typeof oldInput
                                            !=='undefined' && oldInput.userType==='Guest' ? 'checked' : '' %>>
                                        <span>Guest</span>
                                    </label>
                                    <label class="flex items-center gap-2">
                                        <input type="radio" name="userType" value="Host" <%=typeof oldInput
                                            !=='undefined' && oldInput.userType==='Host' ? 'checked' : '' %>>
                                        <span>Host</span>
                                    </label>
                                </div>
                            </div>

                            <!-- Terms & Conditions -->
                            <div class="flex items-start gap-2">
                                <input type="checkbox" name="terms" value="on" required class="mt-1" <%=typeof oldInput
                                    !=='undefined' && oldInput.terms ? 'checked' : '' %>>
                                <label class="text-gray-700 text-sm">
                                    I agree to the <span class="text-blue-600 underline cursor-pointer">Terms &
                                        Conditions</span>
                                </label>
                            </div>

                            <!-- Submit Button -->
                            <button type="submit"
                                class="w-full bg-blue-600 text-white py-2 rounded-md font-semibold hover:bg-blue-700 transition">
                                Signup
                            </button>

                </form>
            </div>
        </div>

</body>

</html>